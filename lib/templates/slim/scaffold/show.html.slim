.page-header
  h1= page_title(model: <%= class_name %>.model_name.human)

= link_to icon('edit', t('helpers.links.edit', model: <%= class_name %>.model_name.human)), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary'
= ' or '
= link_to t('.back', default: t('helpers.links.back')), <%= plural_table_name %>_path
.pull-right
  = link_to icon('trash', t('.destroy', default: t('helpers.links.destroy'))), @<%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?', disable_with: t('helpers.disable_with') }, class: 'btn btn-danger'
